    <p id="notice"><%= notice %></p>

    <p>
      <b>Presenter:</b>
      <%= @orientation.presenter %>
    </p>

    <p>
      <b>Datetime:</b>
      <%= @orientation.datetime %>
    </p>


       <b>Number of maximum participants:</b>
	<%= @orientation.participantMax %>
      </p>
      <p>
	<b>Number of current participants:</b>
	<%= @orientation.numCurrParticipant = @orientation.volunteers.length %>
      </p>
	
	
	

      
      <% vols = Volunteer.all %>
	<% (0..vols.length-1).each do |p| %>
	  <% if (vols[p].orientation_id == @orientation.id and vols[p].orientation_id!=1)%>
	    <table>
	      <%= form_tag "/orientations/#{vols[p].orientation_id}", method: "put", action: "update"  do %>
	      <td>
		<%= check_box_tag "delOrien_#{vols[p].id}" %>
		<%= label_tag("delOrien_#{vols[p].id}", vols[p].orientation.nil? ? '' : vols[p].firstname) %>
		<%#= @volunteer.orientation.numCurrParticipant = @volunteer.orientation.numCurrParticipant - 1 %>
		<%= submit_tag 'Delete' %>
	      </td>
	      <% end %>
	    </table>
	    
	  <% end %>
	  
	  <% if (vols[p].orientation_id == @orientation.id and vols[p].orientation_id == 1)%>
	    <%#= form_for(@volunteer) do |f| %>
	      <table>
		<%= form_tag "/orientations/#{vols[p].orientation_id}", method: "put", action: "update"  do %>
		  <td>
		    <%= label_tag("addOrien_#{vols[p].id}", vols[p].orientation.nil? ? '' : vols[p].firstname) %>
		    <%= collection_select("addOrien_#{vols[p].id}", :id, Orientation.find(:all, :conditions => ['numCurrParticipant < participantMax']), :id, :datetime) %>
		    <%= submit_tag 'Add' %>
		  </td> 
		<% end %>
	      </table>
	  <% end %>
      <% end %>
      <% @orientation.save %>
    </p>
    
    <% #if @orientation.id != 1 %>
   
 
 
    
    <%= link_to 'Edit', edit_orientation_path(@orientation) %> |
    <%= link_to 'Back', orientations_path %>
